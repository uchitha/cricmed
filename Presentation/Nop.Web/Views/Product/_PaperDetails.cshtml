@model IList<ProductSpecificationModel>
@using Nop.Web.Models.Catalog;
@if (Model.Count > 0)
{
    var author = Model.SingleOrDefault(m => m.SpecificationAttributeName == "Author");

    if (author != null)
    {
        <div class="short-description"><strong>
                 @Html.Raw(author.ValueRaw)
          </strong></div>
    }

    var journal = Model.SingleOrDefault(m => m.SpecificationAttributeName == "Journal");

    if (journal != null)
    {
        <div class="short-description">
            <strong>
                @Html.Raw(journal.ValueRaw)
            </strong>
        </div>
    }


